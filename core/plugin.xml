<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?after=org.eclipse.jdt.ui.refactoring.menu">
         <menu
               label="%menu.label">
            <command
                  commandId="at.splendit.simonykees.simonykees.core.SelectRulesWizardHandler"
                  label="%command.label.select_rules_wizard"
                  style="push">
            </command>
            <command
                  commandId="at.splendit.simonykees.simonykees.core.LoggerRuleWizardHandler"
                  label="%command.label.logger_rule_wizard"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=org.eclipse.jdt.ui.refactoring.menu">
         <menu
               label="%menu.label">
            <command
                  commandId="at.splendit.simonykees.simonykees.core.SelectRulesWizardHandler"
                  label="%command.label.select_rules_wizard"
                  style="push">
            </command>
            <command
                  commandId="at.splendit.simonykees.simonykees.core.LoggerRuleWizardHandler"
                  label="%command.label.logger_rule_wizard"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution locationURI="popup:#CompilationUnitEditorContext?after=org.eclipse.jdt.ui.refactoring.menu">
         <menu
               label="%menu.label">
 
            <command
                  commandId="at.splendit.simonykees.simonykees.core.LoggerRuleWizardHandler"
                  label="%command.label.logger_rule_wizard"
                  style="push">
            </command>           <command
                  commandId="at.splendit.simonykees.simonykees.core.SelectRulesWizardHandler"
                  label="%command.label.select_rules_wizard"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension point="org.eclipse.ui.commands">
      <command
            defaultHandler="at.splendit.simonykees.core.handler.LoggerRuleWizardHandler"
            id="at.splendit.simonykees.simonykees.core.LoggerRuleWizardHandler"
            name="%command.name.logger_rule_wizard_handler">
      </command>
      <command
            defaultHandler="at.splendit.simonykees.core.handler.SelectRulesWizardHandler"
            id="at.splendit.simonykees.simonykees.core.SelectRulesWizardHandler"
            name="%command.name.select_rules_wizard_handler">
      </command>
   </extension>
   <extension point = "org.eclipse.ui.preferencePages">
       <page id="at.splendit.simonykees.core.ui.preference.ProfilePreferencePage"
	    	class="at.splendit.simonykees.core.ui.preference.SimonykeesPreferencePage"
            name="%preferencePage.name">
       </page>
	
       <page id="at.splendit.simonykees.core.ui.preference.ProfilePreferencePageLicense"
			class="at.splendit.simonykees.core.ui.preference.SimonykeesPreferencePageLicense"
			name="%preferencePageLicense.name"
			category = "at.splendit.simonykees.core.ui.preference.ProfilePreferencePage">
       </page>
	</extension>
	
	<extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="at.splendit.simonykees.core.ui.preference.SimonykeesPreferenceInitializer">
      </initializer>
   </extension>
 <extension point="org.eclipse.epp.logging.aeri.ide.servers">
    <server id="at.splendit.jsparrow"
        name="jSparrow"
        description="Help improve jSparrow by sending error reports to us."
        class="org.eclipse.epp.internal.logging.aeri.ide.server.mars.ServerConnection"
        icon16="icons/jSparrow_active_icon_100.png"
        icon32="icons/jSparrow_active_icon_100.png"> 

    <link rel="provider"
      title="jSparrow"
      href="https://jsparrow.eu"/>

        <link rel="discovery"
              title="Discovery URL"
              href="https://aer.ctrlflow.com/jsparrow/community/discovery"/>
    </server>
</extension>
</plugin>
