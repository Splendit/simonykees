<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>at.splendit</groupId>
		<artifactId>tests</artifactId>
		<version>4.19.0-SNAPSHOT</version>
	</parent>

	<artifactId>eu.jsparrow.rules.api.test</artifactId>
	<packaging>eclipse-test-plugin</packaging>
	<name>jSparrow :: test rules api</name>
	<description>jSparrow Rules API Test Plugin</description>

	<build>
		<plugins>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>${jacoco.plugin.version}</version>
				<configuration>
					<destFile>${keystore.directory}/target/jacoco-it.exec</destFile>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
